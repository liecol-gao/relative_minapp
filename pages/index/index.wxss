.main-bg{
    height:100%;
    width:100%;
    position:absolute;
    top:0;
    left:0;
    z-index:-1;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  justify-content: center;
  top: 26%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
}

.usermotto {
  margin-top: 200px;
  color: 	#FFFFFF;
}

.welcome {
  width:40%;
  height: 6vh;
  text-align: center;
  line-height: 6vh;
  color: #fff;
  padding: 4rpx 8rpx 4rpx 8rpx;
  border: 1px solid #fff;
  border-radius: 2vh;
  font-size: 16px;
  background: #cc3300;
  position: absolute;
  justify-content: center;
  top:45%;
}

